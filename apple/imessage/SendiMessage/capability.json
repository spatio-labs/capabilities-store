{
  "type": "local",
  "name": "Send iMessage",
  "description": "Sends an iMessage to a specified phone number using Apple Messages app.",
  "categories": [
    "Communication"
  ],
  "tags": [
    "Messages",
    "iMessage"
  ],
  "entry_point": "main.zsh",
  "organization": "apple",
  "group": "imessage",
  "auth_type": "None",
  "inputs": [
    {
      "name": "recipientPhone",
      "type": "string",
      "required": true,
      "description": "The phone number of the recipient to send the iMessage to."
    },
    {
      "name": "message",
      "type": "string",
      "required": true,
      "description": "The message content to send."
    }
  ],
  "output": {
    "status": {
      "type": "string"
    },
    "recipient": {
      "type": "string"
    }
  }
}