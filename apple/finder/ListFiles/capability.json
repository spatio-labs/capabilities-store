{
  "type": "local",
  "name": "List Files",
  "description": "Lists all files in a given directory.",
  "categories": [
    "File System"
  ],
  "tags": [
    "Finder",
    "Files"
  ],
  "entry_point": "main.zsh",
  "organization": "apple",
  "group": "finder",
  "inputs": [
    {
      "name": "directoryPath",
      "type": "string",
      "required": true,
      "description": "The path to the directory to list files from."
    }
  ],
  "output": {
    "files": {
      "type": "list",
      "items": {
        "type": "string"
      }
    }
  }
}