{
  "name": "Send Email",
  "description": "A capability that sends an email through Gmail.",
  "entry_point": "main.zsh",
  "organization": "google",
  "group": "gmail",
  "auth": {
    "type": "oauth2",
    "required": true,
    "scopes": ["https://www.googleapis.com/auth/gmail.send"]
  },
  "inputs": [
    {
      "name": "recipientEmail",
      "type": "string",
      "required": true,
      "description": "The recipient's email address."
    },
    {
      "name": "subject",
      "type": "string",
      "required": true,
      "description": "The subject of the email."
    },
    {
      "name": "body",
      "type": "string",
      "required": true,
      "description": "The body of the email."
    }
  ],
  "output": "json"
}